// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/node_modules": true,
        "**/bin": true,
        "**/obj": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },

    "search.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true
    },

    "files.watcherExclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.git/objects/**": true
    }
}